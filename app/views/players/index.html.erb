<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Player Statistics</h1>

  <table id="baseball-stats" class="table table-striped table-bordered" style="width: 1000px;">
    <thead>
      <tr>
        <th>Name</th>
        <th>AVG</th>
        <th>HR</th>
        <th>RBI</th>
        <th>RUNS</th>
        <th>SB</th>
        <th>OPS</th>
      </tr>
    </thead>

    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= player.name %></td>
          <td><%= player.avg %></td>
          <td><%= player.hr %></td>
          <td><%= player.rbi %></td>
          <td><%= player.runs %></td>
          <td><%= player.sb %></td>
          <td><%= player.ops %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#baseball-stats').DataTable({
      "order": [[1, "desc"]],
      "pageLength": 25
    });
  });
</script>
